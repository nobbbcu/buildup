.contents.row
  .container
    %h2 ログイン
    = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
      = f.label :メールアドレス
      = f.email_field :email, autofocus: true

      = f.label :パスワード
      = f.password_field :password, autocomplete: "off"

      = f.submit "ログイン"

    = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
      = f.hidden_field :email, value: "ddd@gmail.com"
      = f.hidden_field :password, value: "aaaa111"
      = f.submit "かんたんログイン", class: "easy_login", name: "easy_commit"